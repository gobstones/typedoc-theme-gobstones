{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "./dist",
        "target": "ES2022",
        "strict": true,
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": false,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./dist/typings",
        "resolveJsonModule": true,
        "stripInternal": true,
        "composite": false,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "jsx": "react",
        "jsxFactory": "JSX.createElement",
        "jsxFragmentFactory": "JSX.Fragment",
        "module": "CommonJS",
        "moduleResolution": "Node"
    },
    "include": ["src/**/*", "./src/@types/*.d.ts"]
}
